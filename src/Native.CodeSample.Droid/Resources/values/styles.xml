<?xml version="1.0" encoding="utf-8" ?>
<resources>
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
    </style>
    
    <style name="AppTheme" parent="AppTheme.Base">
        <item name="android:windowBackground">@color/primaryColor</item>
        <item name="android:fontFamily">monospace</item>
    </style>
    
    <style name="AppTheme.TextView.Base" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@color/secondaryColor</item>
    </style>
    
    <style name="AppTheme.TextView" parent="AppTheme.TextView.Base">
        <item name="android:gravity">center</item>
    </style>
    
    <style name="AppTheme.EditText" parent="AppTheme.TextView.Base">
        <item name="android:backgroundTint">@color/secondaryColor</item>
        <item name="android:maxLines">1</item>
    </style>
    
    <style name="AppTheme.Button" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:backgroundTint">@color/secondaryColor</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primaryColor</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_animated_icon</item>
        <item name="android:windowSplashScreenBrandingImage">@drawable/logo</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/AppTheme</item>
        <item name="android:statusBarColor">@color/primaryColor</item>
        <item name="android:navigationBarColor">@color/primaryColor</item>
    </style>
</resources>
