<?xml version="1.0" encoding="utf-8" ?>
<resources>
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/primaryColor</item>
        <item name="android:colorPrimaryDark">@color/primaryColor</item>
        <item name="android:colorAccent">@color/secondaryColor</item>
    </style>
    
    <style name="AppTheme" parent="AppTheme.Base">
    </style>

    <style name="AppTheme.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primaryColor</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_animated_icon</item>
        <item name="android:windowSplashScreenBrandingImage">@drawable/logo</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/AppTheme</item>
        <item name="android:statusBarColor">@color/primaryColor</item>
        <item name="android:navigationBarColor">@color/primaryColor</item>
    </style>
</resources>
